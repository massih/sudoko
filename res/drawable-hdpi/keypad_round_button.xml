<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape android:shape="oval" >
		<gradient
            android:angle="90"
            android:endColor="@color/viber_color"
            android:startColor="@color/massih_1" />
        <stroke
            android:width="3dp"
            android:color="@color/black_1" />
    </shape>
</item>

<item>
    <shape android:shape="oval" >
        <gradient
            android:angle="135"
            android:endColor="@color/viber_color"
            android:startColor="@color/massih_1" />
        <stroke
            android:width="3dp"
            android:color="#80281260" />
    </shape>
</item>
</selector>